name: Update README with Latest Repositories

on:
  schedule:
    - cron: '0 * * * *'  # Runs every hour
  workflow_dispatch:

permissions:
  contents: write

jobs:
  update-readme:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install dependencies
        run: |
          sudo apt update
          sudo apt install jq -y  # Ensure jq is installed

      - name: Fetch latest repositories
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          gh repo list yashKappa --limit 6 --json name,url --sort=updated > repos.json
          jq -r '.[] | "| [\(.name)](\(.url)) |"' repos.json > latest_repos.md

      - name: Update README
        run: |
          awk '/<!-- LATEST-REPOS-START -->/{print; system("cat latest_repos.md"); next} /<!-- LATEST-REPOS-END -->/{print; exit} 1' README.md > new_readme.md
          mv new_readme.md README.md

      - name: Commit and push changes
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"
          git add README.md
          git diff --quiet && echo "No changes to commit" || (git commit -m "Updated latest repositories dynamically" && git push)
